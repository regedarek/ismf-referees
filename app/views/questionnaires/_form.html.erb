<%= form_with(model: questionnaire) do |form| %>
  <div class='field is-horizontal'>
    <div class='field-label is-normal'>
      <%= form.label :name, class: 'label' %>
    </div>
    <div class='field-body'>
      <div class='field'>
        <div class='control'>
          <% input_class = @questionnaire.errors[:name].present? ? 'input is-danger' : 'input' %>
          <%= form.text_field :name, class: input_class %>
          <%= content_tag :p, @questionnaire.errors[:name].to_sentence, class: "help is-danger" %>
        </div>
      </div>
    </div>
  </div>

  <div class='field is-horizontal'>
    <div class='field-label is-normal'>
      <%= form.label :state, class: 'label' %>
    </div>
    <div class='field-body'>
      <div class='field'>
        <div class='control'>
          <% input_class = @questionnaire.errors[:state].present? ? 'input is-danger' : 'input' %>
          <%= form.select :state,
            options_for_select(Questionnaire.state_select, selected: form.object.state),
            class: input_class
          %>
          <%= content_tag :p, @questionnaire.errors[:state].to_sentence, class: "help is-danger" %>
        </div>
      </div>
    </div>
  </div>

  <hr>
  <div class="field is-horizontal">
    <div class="field-label is-normal"></div>
    <div class="field-body">
      <div class="field">
        <div class="field-body">
          <div class="field is-grouped">
            <div class="control">
              <%= form.submit class: 'button is-success' %>
              <%= link_to I18n.t('.back'), questionnaires_path, class: 'button is-light' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
