<section class='section'>
  <div class="is-title-bar">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <h1 class="title">Questionnaire</h1>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <%= link_to 'Dodaj Questionnaire', new_questionnaire_path, class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class='card has-table'>
    <div class='card-content'>
      <div class='table-wrapper'>
        <table class='table is-striped is-hoverable is-fullwidth'>
          <thead>
            <tr>
              <th><%= Questionnaire.human_attribute_name(:name) %></th>
              <th><%= Questionnaire.human_attribute_name(:state) %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @questionnaires.each do |questionnaire| %>
              <tr>
                  <td><%= questionnaire.name %></td>
                  <td><%= questionnaire.state %></td>
                  <td>
                  <div class='buttons is-right'>
                    <%= link_to questionnaire, class: 'button is-small is-primary' do %>
                      <span class="icon is-small"><i class="fas fa-newspaper"></i></span>
                    <% end %>
                    <%= link_to edit_questionnaire_path(questionnaire), class: 'button is-small is-info' do %>
                      <span class="icon is-small"><i class="fas fa-pen-to-square"></i></span>
                    <% end %>
                    <%= link_to questionnaire, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'button is-danger is-small' do %>
                      <span class="icon is-small"><i class="fas fa-trash-can"></i></span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
