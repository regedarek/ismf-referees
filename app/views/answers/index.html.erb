<section class='section'>
  <div class="is-title-bar">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <h1 class="title">Answer</h1>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <%= link_to 'Add Answer', new_questionnaire_question_answer_path, class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class='card has-table'>
    <div class='card-content'>
      <div class='table-wrapper'>
        <table class='table is-striped is-hoverable is-fullwidth'>
          <thead>
            <tr>
              <th><%= Answer.human_attribute_name(:correct) %></th>
              <th><%= Answer.human_attribute_name(:name) %></th>
              <th><%= Answer.human_attribute_name(:question) %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @answers.each do |answer| %>
              <tr>
                  <td><%= answer.correct %></td>
                  <td><%= answer.name %></td>
                  <td><%= answer.question_id %></td>
                  <td>
                  <div class='buttons is-right'>
                    <%= link_to answer, class: 'button is-small is-primary' do %>
                      <span class="icon is-small"><i class="fas fa-newspaper"></i></span>
                    <% end %>
                    <%= link_to edit_answer_path(answer), class: 'button is-small is-info' do %>
                      <span class="icon is-small"><i class="fas fa-pen-to-square"></i></span>
                    <% end %>
                    <%= link_to answer, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'button is-danger is-small' do %>
                      <span class="icon is-small"><i class="fas fa-trash-can"></i></span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
